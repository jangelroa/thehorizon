  <div class="container withtime">

    <!-- row for time and seconds circle -->
    <div class="row">
      <div class="col-md-12 col-md-offset-2 time">
        <div id="animated-example" class="animated fadeInUp">
          <div id="info"></div>
        </div>



        <script language="JavaScript">

          function clock(){
            var time = new Date()
            var hr = time.getHours()
            var min = time.getMinutes()
            var sec = time.getSeconds()
            var ampm = " PM "
            if (hr < 12){
              ampm = " AM "
            }
            if (hr > 12){
              hr -= 12
            }
            if (hr < 10){
              hr = hr
            }
            if (min < 10){
              min = "0" + min
            }
            if (sec < 10){
              sec = "0" + sec
            }
            if (hr === 12) {
              hr = "twelve"
            }
            if (hr === 11) {
              hr = "eleven"
            }
            if (hr === 10) {
              hr = "ten"
            }
            if (hr === 9) {
              hr = "nine"
            }
            if (hr === 8) {
              hr = "eight"
            }
            if (hr === 7) {
              hr = "seven"
            }
            if (hr === 6) {
              hr = "six"
            }
            if (hr === 5) {
              hr = "five"
            }
            if (hr === 4) {
              hr = "four"
            }
            if (hr === 3) {
              hr = "three"
            }
            if (hr === 2) {
              hr = "two"
            }
            if (hr === 1) {
              hr = "one"
            }
            if (hr === 0) {
              hr = "twelve"
            }
            console.log("This is hr: " + hr);
            document.getElementById('info').innerHTML = hr+"  "+min
            setTimeout("clock()", 1000)

          }

          window.onload=clock();
        </script>


        <!-- progressbar.js circle for seconds -->
        <script>
          var line = new ProgressBar.Line('#container');
          var progressBar = new ProgressBar.Circle('#container', {
            strokeWidth: 2
          });
        </script>



        <div class="time result">
          <!-- <div class="col-md-3 time result"> -->
          <div class="example-container" id="example-clock-container"><header id="clock-seconds"></header></div>
        </div>






        <script src="https://cdn.rawgit.com/kimmobrunfeldt/progressbar.js/master/dist/progressbar.js"></script>
        <script>

          var element = document.getElementById('example-clock-container');
          element.innerHTML = '<header id="clock-seconds"></header>';
          var textElement = document.getElementById('clock-seconds');

          var seconds = new ProgressBar.Circle(element, {
            duration: 200,
            color: "#FAFAFA",
            trailColor: "#474747"
          });

          setInterval(function() {
            var second = new Date().getSeconds();
            seconds.animate(second / 60, function() {
              textElement.innerHTML = second;
            });
          }, 1000);
        </script>


      </div>
